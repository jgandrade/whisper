{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "lib": ["es6"],
    "rootDir": "src",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedParameters": false
  }
}
